{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types"],
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["ES6", "DOM", "WebWorker"],
    "declaration": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
